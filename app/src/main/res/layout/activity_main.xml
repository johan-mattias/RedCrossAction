<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/amita"
        android:text="Type of Event"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="chooseEvent"
            android:padding="30dp"
            android:text="@string/fire"
            android:textSize="28sp"
            app:srcCompat="@drawable/icons8_fire_80" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="162dp"
            android:layout_height="135dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="chooseEvent"
            android:text="@string/Flood"
            android:textSize="28sp"
            app:srcCompat="@drawable/icons8_flood_car_96" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button4"
            android:layout_width="153dp"
            android:layout_height="137dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="chooseEvent"
            android:text="Traffic accident"
            android:textSize="28sp"
            app:srcCompat="@drawable/icons8_crashed_car_96" />

        <ImageView
            android:id="@+id/button5"
            android:layout_width="142dp"
            android:layout_height="132dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="chooseEvent"
            android:text="Supporter Fight"
            android:textSize="28sp"
            app:srcCompat="@drawable/icons8_judo_96" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/secondRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/button6"
            android:layout_width="151dp"
            android:layout_height="135dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="chooseEvent"
            android:text="Stabbing"
            android:textSize="28sp"
            app:srcCompat="@drawable/icons8_army_knife_96" />

        <ImageView
            android:id="@+id/button7"
            android:layout_width="148dp"
            android:layout_height="135dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="chooseEvent"
            android:text="Shooting"
            android:textSize="28sp"
            app:srcCompat="@drawable/icons8_shooting_96" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>